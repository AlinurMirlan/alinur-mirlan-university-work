@model UnitsViewModel
@{
    ViewData["Title"] = "Cook Book Add Unit";
    ViewData["HeaderTitle"] = "Add Unit";
}


<section class="max-w-lg mx-auto">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div id="error-messages" class="bg-err rounded-md mb-3">
            <ul>
                <li class="text-on-err border-b font-semibold p-2">@Model.ErrorMessage</li>
            </ul>
        </div>
    }
    <form method="post">
        <div class="grid grid-cols-6 border border-outline rounded-t-md">
            <label for="Unit" class="col-span-2 rounded-tl-md p-2 border-outline bg-sec-cont text-on-sec-cont">Unit</label>
            <input type="text" asp-for="Unit.Name" placeholder="Name" class="col-span-4 focus:outline-none px-2 bg-sur border-outline rounded-tr-md" id="Unit">
        </div>
        <button type="submit" class="bg-prim border rounded-full py-2 px-6 text-on-prim mt-3">Add</button>
    </form>
</section>