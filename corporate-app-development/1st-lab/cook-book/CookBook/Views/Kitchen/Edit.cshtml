@model Dish
@{
    ViewData["Title"] = "Cook Book Edit Dish";
    ViewData["HeaderTitle"] = "Edit Dish";
}

<form action="" class="grid grid-cols-3 max-w-max border text-slate-800">
    <label for="name" class="p-3 bg-slate-50">Dish</label>
    <input id="name" value="@Model.Name" asp-for="Name" class="p-3 px-4 col-span-2 border-b focus:outline-blue-200">
    <span class="p-3 bg-slate-50 border-t">Ingredients</span>
    <div class="flex flex-col col-span-2">
        @for (int i = 0; i < Model.Ingredients.Count; i++)
        {
            <input asp-for="Ingredients[i].Name" value="@Model.Ingredients[i].Name" class="border-b p-3 px-4 focus:outline-blue-200">
        }
    </div>
    <button class="col-span-3 bg-blue-400 hover:bg-blue-500 text-white py-2 rounded-bl-sm">Edit</button>
</form>